{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Bash(*)"
    ],
    "defaultMode": "plan"
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "tmux",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "[ \"$(git branch --show-current)\" != \"main\" ] || echo 'WARNING: Editing on main branch — ensure build passes before push' >&2",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "CMD=$(cat | jq -r '.tool_input.command // \"\"'); if echo \"$CMD\" | grep -qiE 'claude\\s+(-p|--print)'; then echo '{\"hookSpecificOutput\":{\"hookEventName\":\"PreToolUse\",\"permissionDecision\":\"deny\",\"permissionDecisionReason\":\"claude -p 절대 금지. 래퍼(scripts/agent-team.sh) 또는 인터랙티브 모드만 허용.\"}}'; exit 0; fi",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/check-context.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "~/.claude/scripts/save-leader-memory.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "/Users/smith/projects/qa-helpdesk/.claude/hooks/notify-openclaw.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd /Users/smith/projects/qa-helpdesk && npx tsc --noEmit --quiet 2>&1 | tail -5; if [ $? -ne 0 ]; then echo '{\"block\": true, \"message\": \"TypeScript 에러 있음. 수정 후 다시 완료 처리하세요.\"}' >&2; exit 2; fi",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "cd /Users/smith/projects/qa-helpdesk && npx next lint --quiet 2>&1 | tail -5; EXIT=$?; if [ $EXIT -ne 0 ]; then echo 'Lint 경고/에러 발견. 확인 필요.' >&2; fi",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/scripts/check-context.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/smith/projects/qa-helpdesk/.claude/scripts/validate-features.sh"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/smith/projects/qa-helpdesk/.claude/hooks/notify-task-completed.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '다음 미완료 태스크를 확인하고 작업을 계속하세요. 모든 태스크가 완료되었으면 팀 리더에게 보고하세요.' >&2; exit 2",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
